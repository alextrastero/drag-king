{
  "name": "drag-king",
  "version": "0.2.5",
  "description": "Drag and drop to upload to server",
  "main": "main.js",
  "watch": {
    "less": {
      "patterns": [
        "client/less"
      ],
      "extensions": "less",
      "quiet": false
    },
    "js": {
      "patterns": [
        "client"
      ],
      "extensions": [
        "js",
        "html"
      ],
      "quiet": false
    },
    "ts": {
      "patterns": [
        "client"
      ],
      "extensions": [
        "ts"
      ],
      "quiet": false
    }
  },
  "config": {
    "port": {
      "development": 8001,
      "production": 80
    },
    "auth": true
  },
  "scripts": {
    "dist": "npm-run-all ts js less* images*",
    "watch": "npm-watch",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prejs": "mkdir -p dist",
    "ts": "tsc",
    "js": "browserify -t [ stringify --extensions [.html] ] client/dragKing.js -o dist/main.gen.js",
    "less": "npm-run-all less:*",
    "less:main": "lessc --npm-import client/less/main.less dist/css/main.css",
    "less:auth": "lessc --npm-import client/less/auth.less dist/css/auth.css",
    "postless": "npm-run-all mediumEditor:*",
    "mediumEditor:main": "cat node_modules/medium-editor/dist/css/medium-editor.min.css >> dist/css/main.css",
    "mediumEditor:theme": "cat node_modules/medium-editor/dist/css/themes/flat.min.css >> dist/css/main.css",
    "preimages": "mkdir -p dist/img",
    "images": "npm-run-all images:*",
    "images:images": "cp -rf client/images/* dist/img/.",
    "start": "node dragKing.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/alextrastero/drag-king.git"
  },
  "author": "aode & phen",
  "license": "BSD-2-Clause",
  "bugs": {
    "url": "https://github.com/alextrastero/drag-king/issues"
  },
  "dependencies": {
    "basic-auth": "^2.0.1",
    "body-parser": "^1.18.3",
    "canny": "^0.2.1",
    "connect-busboy": "0.0.2",
    "cookie-parser": "^1.4.4",
    "directory-tree": "^2.2.1",
    "dnode": "^1.2.2",
    "express": "^4.16.4",
    "express-session": "^1.15.2",
    "finalhandler": "^1.1.1",
    "fs-extra": "^5.0.0",
    "md5": "^2.2.1",
    "medium-editor": "^5.23.3",
    "message-toast": "github:eightyfour/message-toast",
    "node-thumbnail": "^0.8.1",
    "octicons": "^5.0.1",
    "passport": "^0.3.2",
    "passport-ldapauth": "^1.0.0",
    "serve-index": "*",
    "serve-static": "^1.13.2",
    "shoe": "0.0.15",
    "string-to-color": "github:eightyfour/string-to-color",
    "stringify": "^5.2.0"
  },
  "devDependencies": {
    "@types/node": "^7.10.5",
    "browserify": "^13.1.1",
    "less": "^2.7.1",
    "less-plugin-npm-import": "^2.1.0",
    "npm-run-all": "^3.1.2",
    "npm-watch": "^0.1.7",
    "typescript": "^2.9.2"
  }
}
